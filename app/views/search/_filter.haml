= select_tag "filters[][association]", options_for_select(options_for_filter, filter['association']), { :class => "selector" }
%span.filter= render :partial => "search/filters/#{filter['association']}", :locals => { :filter => filter }
%input.add-filter{:type => "button", :value => "+"}
%input.remove-filter{:type => 'button', :value => '-'}