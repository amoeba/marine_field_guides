- form_for(:species, @species, :url => url, :html => {:method => method, :multipart => true}) do |f|
  = f.error_messages
  
  %div.group
    %h3 General Attributes
    = f.label(:scientific_name)
    = f.text_field(:scientific_name)
  
  %div.group
    %h3 Taxonomy
    - f.fields_for(:taxonomy) do |t|
      = render(:partial => 'species/forms/taxonomy', :locals => { :f => t})
  
  - [:abundances, :characters, :common_names, :distinguishing_characters, :distribution, :habitats, :images, :natural_histories, :similar_species, :synonyms].each do |model|
    = render(:partial => 'subform', :locals => {:model => model, :f => f, :partial => "#{model.to_s.singularize}"})
  = f.submit